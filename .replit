modules = ["nodejs-20", "web", "go-1.21"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Web"

[[workflows.workflow]]
name = "Start Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.config.js --mode development --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
